@layout MasterLayout
@page "/"
@inherits Blaze.ComponentBaseClass.ConferenceRoomComponentBase
@inject NavigationManager NavigationManager
<div id="booking" class="section">
    <div class="section-center">
        <div class="container">
            <div class="conferenceroom-status">
                <div class="col-md-12 conf-statuswrap">
                    <div class="col-md-6 col-md-push-5 booking-ctawrap">
                        <div class="booking-cta">
                            <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
                                <ol class="carousel-indicators">
                                    <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                                    <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                                    <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
                                </ol>
                                <div class="carousel-inner" role="listbox">
                                    <ConferenceBanner ConferenceRoomModel="conferenceRoomModel" Floor="First" VacantTimeSpan="@VacantTimeSpan" Active="active"></ConferenceBanner>
                                    <ConferenceBanner ConferenceRoomModel="conferenceRoomModel" Floor="Second" VacantTimeSpan="@VacantTimeSpan"></ConferenceBanner>
                                    <ConferenceBanner ConferenceRoomModel="conferenceRoomModel" Floor="Third" VacantTimeSpan="@VacantTimeSpan"></ConferenceBanner>
                                </div>
                                <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                    <span class="sr-only">Previous</span>
                                </a>
                                <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                    <span class="sr-only">Next</span>
                                </a>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6 col-md-pull-7 booking-formwrap">
                        <div class="booking-form">
                            <div class="form-group">
                                <h2>Next Booking Details</h2>
                                <div class="booking-details">
                                    @if (conferenceRoomModel.ConferenceDetail != null)
                                    {
                                        foreach (var item in conferenceRoomModel.ConferenceDetail)
                                        {
                                            <div class="upcoming-event" style="background-color:#081f4f;padding:4px 0px 0px 13px">
                                                <h5>@item.ProjectName Project</h5>
                                                <span>by @item.BookedBy</span>
                                                <p class="p-desc">@item.Description </p>
                                                <div class="time-durasn"><i class="fa fa-clock-o" aria-hidden="true"></i>@item.Time</div>
                                            </div>
                                        }
                                    }
                                    else
                                    {
                                        <div class="upcoming-event">
                                            <h3>No more meetings available for today's</h3>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

